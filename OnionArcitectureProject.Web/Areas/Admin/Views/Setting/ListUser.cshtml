@model List<OnionArcitectureProject.ViewModels.UserViewModel>

<a class="btn btn-primary" asp-controller="Setting" asp-action="AddUser">New user</a>
<br />
<br />
<table class="table" dir="ltr">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">User name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Command</th>

        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">
                    @i
                </th>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span>@role |</span>
                    }
                </td>
                <td>
                    <a class="mx-2">
                        <i class="far fa-trash-alt" style="font-size:1.5rem" data-toggle="modal" data-target="#exampleModalCenter"></i>
                    </a> |

                    <a asp-action="EditUser" asp-route-id="@user.Id"
                   class="mx-2">
                        <i class="far fa-edit" style="font-size:1.5rem"></i>
                    </a> |

                    <a asp-action="DetailUser" asp-route-id="@user.Id"
                   class="mx-2">
                        <i class="fas fa-info-circle" style="font-size:1.5rem"></i>
                    </a>
                </td>
            </tr>

            i++;

            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalCenterTitle">Warning</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure want delete this user?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <a asp-action="RemoveUser" asp-route-id="@user.Id" type="button" class="btn btn-danger">Delete user</a>
                        </div>
                    </div>
                </div>
            </div>


        }
    </tbody>
</table>






